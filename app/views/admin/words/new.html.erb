<div class="container container-small">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-6">
                    <span>Admin | <%= @category.title %> | Words</span>
                </div>
                <div class="col-sm-6 text-right">
                    <%= link_to "Back", admin_category_words_path, class: "btn btn-sm" %>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <%= render 'admin/words/form' %>
        </div>
    </div>
</div>
<script>
    $('#new_word input[type=radio]').change(function() {
        $('#new_word input[type=radio]:checked').not(this).prop('checked', false);
    });
</script>